<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net" />
  </configSections>
  <log4net>
    <root>
    </root>
    <logger name="InfoLog">
      <level value="ALL" />
      <appender-ref ref="InfoFile" />
    </logger>
    <appender name="InfoFile" type="log4net.Appender.FileAppender" >
      <param name="File" type="" value="Log/Info/info.log" />
      <param name="AppendToFile" value="true" />
      <layout type="log4net.Layout.PatternLayout,log4net">
        <param name="ConversionPattern" value="%n[%d] %n%c: %m%n" />
        <param name="Header" value="---------------------------" />
      </layout>
    </appender>
    <logger name="ErrorLog">
      <level value="ALL" />
      <appender-ref ref="ErrorFile" />
    </logger>
    <appender name="ErrorFile" type="log4net.Appender.FileAppender" >
      <param name="File" type="" value="Log/Error/error.log" />
      <param name="AppendToFile" value="true" />
      <layout type="log4net.Layout.PatternLayout,log4net">
        <param name="ConversionPattern" value="%n[%d] %n%c: %m%n" />
        <param name="Header" value="---------------------------" />
      </layout>
    </appender>
  </log4net>
</configuration>